<div class="inner-box">
  <h1>New Product</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name"}}
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image"}}
      </div>
      <div class="form-group">
        <label for="blurb">Blurb</label>
        {{input value=blurb id="blurb"}}
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        {{input type="number" min="0" value=price id="price"}}
      </div>
      <div class="form-group">
        <label for="quantity">Quantity</label>
        {{input type="number" min="0" value=quantity id="quantity"}}
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        {{textarea rows="1" cols="18" value=description id="description"}}
      </div>

      <button class="btn btn-primary"{{action 'saveProduct1'}}>Save</button>
    </form>
  </div>
</div>
