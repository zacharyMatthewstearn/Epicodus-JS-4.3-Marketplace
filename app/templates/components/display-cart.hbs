<h2>Cart</h2>
{{#each shoppingCart.products as |product|}}
  {{product.name}} -- ${{product.price}}
  <button class="btn btn-danger" {{action 'removeFromCart' product}}>Remove from cart</button>
  <br>
{{/each}}

{{#if shoppingCart.cartTotalPrice}}
  <h4>${{shoppingCart.cartTotalPrice}}</h4>
{{else}}
  <h4><em>Cart is empty</em></h4>
{{/if}}
